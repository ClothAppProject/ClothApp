<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/infocard"
        android:elevation="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle|beginning|end"
            android:divider="@drawable/empty_divider_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:divider="@drawable/empty_divider"
                android:showDividers="middle"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_attach_file_white_48dp"
                    android:tint="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="6dp"
                    android:textColor="@color/transparent_black"
                    android:textSize="35dp"
                    android:text="Cloth 1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="50dp"
                android:divider="@drawable/empty_divider"
                android:showDividers="middle"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_location_on_white_48dp"
                    android:tint="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/info_text"
                    android:textSize="30dp"
                    android:text="Address" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="50dp"
                android:divider="@drawable/empty_divider"
                android:showDividers="middle"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_local_grocery_store_white_48dp"
                    android:tint="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/info_text"
                    android:textSize="30dp"
                    android:text="Shop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="50dp"
                android:divider="@drawable/empty_divider"
                android:showDividers="middle"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_local_offer_white_48dp"
                    android:tint="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/info_text"
                    android:textSize="30dp"
                    android:text="Price" />
            </LinearLayout>


        </LinearLayout>
        
        
    </android.support.v7.widget.CardView>

</LinearLayout>