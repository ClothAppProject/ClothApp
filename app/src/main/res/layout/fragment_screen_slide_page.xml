<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details"
                android:background="#D3D3D3">



                <android.support.v7.widget.CardView
                    android:id="@+id/card_foto"
                    android:focusable="true"
                    android:layout_gravity="top"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:focusableInTouchMode="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/photo"
                        android:layout_weight="0.76"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout

                        android:layout_width="110dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/profile_uploaded_photos_user_rectangle"
                        android:backgroundTint="@color/red"
                        android:id="@+id/prof">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/com_facebook_profile_picture_blank_square"
                            android:id="@+id/pic"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:paddingTop="4dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="12dp"
                            android:id="@+id/user"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="italic" />


                    </LinearLayout>
                        <!--
                        <TextView style="@android:style/TextAppearance.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/user"
                            android:layout_weight="0.09"
                            android:textSize="25dp"
                            android:text="prova"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:textColor="#2196F3" />
    -->
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hashtag"
                            android:textColor="#0000FF"/>
                            <!--
                            android:background="@drawable/rectangle"
                            android:hint=" #hashtag"-->



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:id="@+id/share"
                                android:src="@mipmap/ic_share_white_48dp"
                                android:tint="@color/red"
                                android:layout_gravity="left"/>


                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:id="@+id/heart"
                                android:src="@mipmap/ic_favorite_border_white_48dp"
                                android:tint="@color/red"
                                android:layout_marginBottom="2dp"
                                android:layout_gravity="right|center_vertical" />

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:textSize="20sp"
                                android:gravity="right"
                                android:id="@+id/like"
                                android:layout_marginRight="30dp"
                                android:textColor="@color/red"
                                android:textColorHint="@color/red"
                                android:layout_marginBottom="8dp"
                                android:hint="0"
                                android:layout_weight="0.37"
                                android:layout_gravity="right" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:id="@+id/person"
                                android:src="@mipmap/ic_person_white_48dp"
                                android:layout_marginLeft="36dp"
                                android:tint="@color/red"
                                android:layout_gravity="left" />

                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@color/sfondo"
                    android:layout_height="wrap_content">

                    <ListView
                        android:layout_width="375dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@color/sfondo"
                        android:layout_marginLeft="-1dp"
                        android:id="@+id/listInfo"
                        android:visibility="visible"
                        android:layout_weight="9.80"/>
                <!--
                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/donut_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" />

                -->
                </LinearLayout>
            </LinearLayout>

    </ScrollView>

</LinearLayout>

