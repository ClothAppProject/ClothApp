<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details">



                <android.support.v7.widget.CardView
                    android:id="@+id/card_foto"
                    android:focusable="true"
                    android:layout_gravity="top"
                    android:elevation="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardUseCompatPadding="true"
                    android:focusableInTouchMode="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/photo"
                        android:layout_weight="0.76"
                        android:layout_centerHorizontal="true" />

                    <TextView style="@android:style/TextAppearance.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user"
                        android:layout_weight="0.09"
                        android:textSize="25dp"
                        android:text="prova"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:textColor="#2196F3" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/hashtag"
                            android:background="@drawable/rectangle"
                            android:hint=" #hashtag"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"

                                android:src="@mipmap/ic_share_white_48dp"
                                android:tint="@color/red"/>


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/ic_favorite_border_white_48dp"
                                android:tint="@color/red"
                                android:layout_gravity="right|center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="30dp"
                                android:gravity="right"
                                android:layout_marginRight="35dp"
                                android:textColor="@color/red"
                                android:textColorHint="@color/red"
                                android:hint="0"
                                android:layout_weight="0.37"
                                android:layout_gravity="right|center_vertical" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/ic_person_white_48dp"
                                android:tint="@color/red"
                                android:layout_gravity="center" />

                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>



                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_marginTop="5dp"
                        android:id="@+id/listInfo"
                        android:visibility="visible"
                        android:layout_weight="9.80"/>

                <!--
                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/donut_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true" />
                -->
            </LinearLayout>

    </ScrollView>

</LinearLayout>

