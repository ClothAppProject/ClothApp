<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/most_recent_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="0dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.clothapp.resources.SquaredImageView
            android:id="@+id/fragment_home_most_recent_item_image"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="27dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView8"
                android:layout_marginStart="60dp" />


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/shape_circle_grey_translucent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:id="@+id/imageView2"
                android:layout_gravity="right" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/fragment_home_most_recent_item_heart"
                android:src="@drawable/ic_favorite_black_24dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="5dp"
                android:tint="@color/white"/>

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>